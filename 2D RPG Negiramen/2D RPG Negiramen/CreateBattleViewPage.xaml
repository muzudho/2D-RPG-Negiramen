<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_2D_RPG_Negiramen.CreateBattleViewPage"
             Title="Create a battle view">
    <ScrollView>
        <VerticalStackLayout>
            <!--
                パンくずリスト
                ==============
            -->
            <HorizontalStackLayout>
                <Button x:Name="HomeBtn"
                    Text="Home"
                    SemanticProperties.Hint="Back to the home"
                    Clicked="HomeBtn_Clicked" />

                <Label
                    Text="＞"
                    SemanticProperties.Hint="Separator"
                    VerticalTextAlignment="Center"/>

                <Label
                    Text="Create a battle view"
                    SemanticProperties.Hint="Separator"
                    VerticalTextAlignment="Center"/>
            </HorizontalStackLayout>

            <Image
                Source="create_battle_view_page.png"
                SemanticProperties.Description="battle view"
                HeightRequest="200"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>