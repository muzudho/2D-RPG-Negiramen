<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:_2D_RPG_Negiramen.ViewModels"
             x:Class="_2D_RPG_Negiramen.Views.TilePalettePage"
             Title="タイル・パレット">

    <ContentPage.BindingContext>
        <viewModels:TilePalettePageViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView>

        <Grid ColumnDefinitions="*,100">

            <Grid Grid.Column="0"
                  RowDefinitions="*" ColumnDefinitions="*">

                <Image WidthRequest="64"
                       HeightRequest="64"
                       Source="C:/Users/むずでょ/Documents/Unity Projects/Negiramen Practice/Assets/Doujin Circle Negiramen/Negiramen Quest/Auto Generated/Images/Tile Set/adventure_field.png"
                       />

            </Grid>

            <Grid Grid.Column="1"
                  RowDefinitions="*,30"
                  BackgroundColor="SkyBlue">

                <Label Text="(" />
                <Label Text="{Binding XAsInt}" />
                <Label Text="," />
                <Label Text="{Binding YAsInt}" />
                <Label Text=")" />

            </Grid>
        </Grid>
        
        
    </ScrollView>

</ContentPage>