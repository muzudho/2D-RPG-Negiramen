<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_2D_RPG_Negiramen.Views.EditStoryPage"
             Title="Edit the story">
    <ScrollView>
        <VerticalStackLayout>
            <!--
                パンくずリスト
                ==============
            -->
            <HorizontalStackLayout>
                <Button x:Name="HomeBtn"
                    Text="Home"
                    SemanticProperties.Hint="Back to the home"
                    Clicked="HomeBtn_Clicked" />

                <Label
                    Text="＞"
                    SemanticProperties.Hint="Separator"
                    VerticalTextAlignment="Center"/>

                <Label
                    Text="Edit the story"
                    SemanticProperties.Hint="Separator"
                    VerticalTextAlignment="Center"/>
            </HorizontalStackLayout>

            <!--
                本文
                ====
            -->
            <Image
                Source="edit_story_page.png"
                SemanticProperties.Description="edit the story"
                HeightRequest="200"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>